<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <variable name="canlayout" value="${longdate} ${message}"/>
  <targets async="true">
    <target name="canlogfile" xsi:type="File" layout="${canlayout}" fileName="canLog.txt" />
    <target name="devicelogfile" xsi:type="File" fileName="deviceLog.txt" />
    <target name="kwplogfile" xsi:type="File" fileName="kwpLog.txt" />
    <target name="flasherlogfile" xsi:type="File" fileName="flasherLog.txt" />
    <target name="uilogfile" xsi:type="File" fileName="uiLog.txt" />
  </targets>

  <rules>
    <logger name="TrionicCANLib.CAN*" level="Trace" writeTo="canlogfile" />
    <logger name="TrionicCANLib.CAN*" level="Debug" writeTo="devicelogfile" />
    <logger name="KwpLog" minlevel="Info" writeTo="kwplogfile" />
    <logger name="FlasherLog" minlevel="Info" writeTo="flasherlogfile" />
    <logger name="UILog" minlevel="Info" writeTo="uilogfile" />
  </rules>
</nlog>