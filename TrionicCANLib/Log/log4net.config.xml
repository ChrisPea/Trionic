<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="RollingLogFileAppenderCan" type="log4net.Appender.RollingFileAppender,log4net">
    <lockingModel type="log4net.Appender.FileAppender+ExclusiveLock"/>
    <file value="canLog.txt" />
    <param name="StaticLogFileName" value="true"/>
    <appendToFile value="true" />
    <param name="RollingStyle" value="Date"/>
    <param name="DatePattern" value="yyyy-MM-dd"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%message%newline"/>
    </layout>
  </appender>

  <appender name="RollingLogFileAppenderDevice" type="log4net.Appender.RollingFileAppender,log4net">
    <lockingModel type="log4net.Appender.FileAppender+ExclusiveLock"/>
    <file value="deviceLog.txt" /> 
    <param name="StaticLogFileName" value="true"/>
    <appendToFile value="true" />
    <param name="RollingStyle" value="Date"/>
    <param name="DatePattern" value="yyyy-MM-dd"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%message%newline"/>
    </layout>
  </appender>

  <appender name="RollingLogFileAppenderFlasher" type="log4net.Appender.RollingFileAppender,log4net">
    <lockingModel type="log4net.Appender.FileAppender+ExclusiveLock"/>
    <file value="flasherLog.txt" />
    <param name="StaticLogFileName" value="true"/>
    <appendToFile value="true" />
    <param name="RollingStyle" value="Date"/>
    <param name="DatePattern" value="yyyy-MM-dd"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%message%newline"/>
    </layout>
  </appender>

  <appender name="RollingLogFileAppenderKwp" type="log4net.Appender.RollingFileAppender,log4net">
    <lockingModel type="log4net.Appender.FileAppender+ExclusiveLock"/>
    <file value="kwpLog.txt" />
    <param name="StaticLogFileName" value="true"/>
    <appendToFile value="true" />
    <param name="RollingStyle" value="Date"/>
    <param name="DatePattern" value="yyyy-MM-dd"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%message%newline"/>
    </layout>
  </appender>

  <logger name="CanLog">
    <level value="ALL" />
    <appender-ref ref="RollingLogFileAppenderCan" />
  </logger>

  <logger name="DeviceLog">
    <level value="ALL" />
    <appender-ref ref="RollingLogFileAppenderDevice" />
  </logger>

  <logger name="FlasherLog">
    <level value="ALL" />
    <appender-ref ref="RollingLogFileAppenderFlasher" />
  </logger>

  <logger name="KwpLog">
    <level value="ALL" />
    <appender-ref ref="RollingLogFileAppenderKwp" />
  </logger>
</log4net>